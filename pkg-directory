from roy import build, deps
from pkg_common import Common

class Directory(Common):

    def __init__(self):
        self.name = "datawire-directory"
        self.build_deps = []
        self.deps = [deps.datawire]
        self.arch = "all"
        self.conf = ["/etc/datawire/directory.conf"]

    def build(self, distro):
        result = self.install_prep()
        result += self.install_script("directory")
        result += self.install_config(self.name, distro.image)
        return result

build(Directory())
